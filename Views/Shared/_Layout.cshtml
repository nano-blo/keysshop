<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KeysShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KeysShop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Catalog" asp-action="Index">KeysShop</a>
                <!-- Блок авторизации -->
                @{
                    var userId = Context.Session.GetInt32("UserId");
                    var userName = Context.Session.GetString("UserName");
                }

                @if (userId != null)
                {
                    <div class="navbar-text">
                        <span class="me-3">Привет, @userName!</span>
                        <a href="/Account/Profile" class="btn btn-outline-primary btn-sm me-2">
                            Профиль
                        </a>
                        <a href="/Account/Logout" class="btn btn-outline-danger btn-sm">
                            Выйти
                        </a>
                    </div>
                }
                else
                {
                    <div>
                        <a href="/Account/Login" class="btn btn-outline-primary btn-sm me-2">
                            Войти
                        </a>
                        <a href="/Account/Register" class="btn btn-primary btn-sm">
                            Регистрация
                        </a>
                    </div>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Catalog" asp-action="Index">Каталог</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Пользовательское соглашение</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - KeysShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Пользовательское соглашение</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
