@model KeysShop.Models.User
@{
    ViewData["Title"] = "Мой профиль";
}

<h2>👤 Мой профиль</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
            <strong>Email:</strong> @Model.Email<br>
            <strong>Роль:</strong> @Model.Role<br>
        </p>
        <a href="/Catalog" class="btn btn-primary">Вернуться в каталог</a>
        <a href="/Account/Logout" class="btn btn-danger">Выйти</a>
    </div>
</div>