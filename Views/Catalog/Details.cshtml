                    <span class="text-muted">(4.5/5)</span>
                </div>
                <!-- ID игры -->
                <span class="badge bg-dark">ID: @Model.Id</span>
            </div> *@
        </div>

        <!-- Полное описание -->
        <div class="card mb-4">
            <div class="card-header">
                <h5>Описание игры</h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p style="white-space: pre-line;">@Model.Description</p>
                }
                else
                {
                    <p class="text-muted">Описание отсутствует</p>
                }
            </div>
        </div>

