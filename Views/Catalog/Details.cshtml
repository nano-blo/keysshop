@model KeysShop.Controllers.CatalogController.GameDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<!-- Кнопка "Назад" -->
<div class="mb-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        ← Назад к каталогу
    </a>
</div>

<div class="row">
    <!-- Левая колонка - изображение и основная информация -->
    <div class="col-md-6">
        <!-- Изображение игры -->
        <div class="card mb-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl"
                     class="card-img-top"
                     alt="@Model.Title"
                     style="max-height: 500px; object-fit: contain;">
            }
            else
            {
                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center"
                     style="height: 300px;">
                    <span class="text-white">Нет изображения</span>
                </div>
            }

            <div class="card-body">
                <!-- Статус наличия -->
                @if (Model.IsInStock)
                {
                    <div class="alert alert-success mb-3">
                        <h5 class="alert-heading">В наличии</h5>
                        <p class="mb-0">
                            Доступно ключей: <strong>@Model.AvailableKeys из @Model.TotalKeys</strong>
                        </p>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-3">
                        <h5 class="alert-heading">Нет в наличии</h5>
                        <p class="mb-0">Ключи закончились</p>
                    </div>
                }

                <!-- Цена и кнопка покупки -->
                <div class="d-grid gap-2">
                    <div class="display-4 fw-bold text-primary text-center mb-3">
                        @Model.FormattedPrice
                    </div>

                    @if (Model.IsInStock)
                    {
                        <button class="btn btn-success btn-lg">
                            Купить сейчас
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-lg" disabled>
                            Нет в наличии
                        </button>
                    }
                </div>
            </div>
        </div>

        <!-- Быстрая информация -->
        <div class="card">
            <div class="card-header">
                <h5>Быстрая информация</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <strong>Разработчик:</strong> @Model.Developer
                    </li>
                    <li class="mb-2">
                        <strong>Год выпуска:</strong> @Model.ReleaseYear
                    </li>
                    <li class="mb-2">
                        <strong>Жанры:</strong>
                        @if (Model.Genres != null && Model.Genres.Any())
                        {
                            foreach (var genre in Model.Genres)
                            {
                                <span class="badge bg-info me-1">@genre</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Не указаны</span>
                        }
                    </li>
                    <li>
                        <strong>Ключей всего:</strong> @Model.TotalKeys
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Правая колонка - детальная информация -->
    <div class="col-md-6">
        <!-- Заголовок -->
        <div class="mb-4">
            <h1 class="display-5 fw-bold">@Model.Title</h1>
            @* <div class="d-flex align-items-center mb-3">
                <!-- Рейтинг (пока заглушка) -->
